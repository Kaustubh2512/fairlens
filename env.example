ALGOD_PORT=

INDEXER_TOKEN=your_indexer_token_here
INDEXER_ADDRESS=https://testnet-algorand.api.purestake.io/idx2
INDEXER_PORT=

# IPFS Configuration
IPFS_HOST=127.0.0.1
IPFS_PORT=5001

# Verifier Configuration
VERIFIER_PRIVATE_KEY=your_verifier_private_key_hex_here

# Deployment Configuration
DEPLOYER_MNEMONIC=your_deployer_mnemonic_here
