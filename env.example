# FairLens Environment Configuration
# Copy this file to .env and configure with your values

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================
PORT=5000
NODE_ENV=development
JWT_SECRET=your_jwt_secret_here
LOG_LEVEL=info

# =============================================================================
# DATABASE CONFIGURATION (Supabase)
# =============================================================================
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# =============================================================================
# ALGORAND CONFIGURATION
# =============================================================================
# TestNet Configuration
ALGOD_TOKEN=your_algod_token_here
ALGOD_ADDRESS=https://testnet-algorand.api.purestake.io/ps2
ALGOD_PORT=

INDEXER_TOKEN=your_indexer_token_here
INDEXER_ADDRESS=https://testnet-algorand.api.purestake.io/idx2
INDEXER_PORT=

# MainNet Configuration (for production)
# ALGOD_TOKEN=your_mainnet_algod_token_here
# ALGOD_ADDRESS=https://mainnet-algorand.api.purestake.io/ps2
# ALGOD_PORT=
# INDEXER_TOKEN=your_mainnet_indexer_token_here
# INDEXER_ADDRESS=https://mainnet-algorand.api.purestake.io/idx2
# INDEXER_PORT=

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
VERIFIER_PRIVATE_KEY=your_verifier_private_key_hex_here
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf,text/plain

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
ENABLE_NOTIFICATIONS=true
NOTIFICATION_RETENTION_DAYS=30

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================
CONTRACT_DEPLOYMENT_FEE=1000
MILESTONE_VERIFICATION_FEE=2000
ESCROW_FUNDING_FEE=1000