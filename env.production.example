# FairLens Production Environment Configuration
# Copy this file to .env.production and fill in your values

# ===========================================
# Algorand MainNet Configuration
# ===========================================

ALGOD_TOKEN=your_mainnet_algod_token
ALGOD_ADDRESS=https://mainnet-algorand.api.purestake.io/ps2
ALGOD_PORT=

INDEXER_TOKEN=your_mainnet_indexer_token
INDEXER_ADDRESS=https://mainnet-algorand.api.purestake.io/idx2
INDEXER_PORT=

# ===========================================
# IPFS Configuration (Production)
# ===========================================

IPFS_HOST=ipfs.infura.io
IPFS_PORT=5001
IPFS_PROTOCOL=https

# ===========================================
# Verifier Configuration
# ===========================================

# Ed25519 private key for verifier attestations (32 bytes hex)
VERIFIER_PRIVATE_KEY=your_production_verifier_private_key_hex_here

# ===========================================
# Backend Configuration
# ===========================================

NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# CORS configuration
FRONTEND_URL=https://your-domain.com

# Logging configuration
LOG_LEVEL=warn

# Security configuration
JWT_SECRET=your_production_jwt_secret_here
SESSION_SECRET=your_production_session_secret_here

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# Frontend Configuration
# ===========================================

REACT_APP_ALGOD_TOKEN=your_mainnet_algod_token
REACT_APP_ALGOD_ADDRESS=https://mainnet-algorand.api.purestake.io/ps2
REACT_APP_INDEXER_TOKEN=your_mainnet_indexer_token
REACT_APP_INDEXER_ADDRESS=https://mainnet-algorand.api.purestake.io/idx2
REACT_APP_BACKEND_URL=https://api.your-domain.com

# Feature flags
REACT_APP_ENABLE_WALLETCONNECT=true
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_DEBUG=false

# ===========================================
# Database Configuration
# ===========================================

DATABASE_URL=postgresql://username:password@localhost:5432/fairlens
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=fairlens
DATABASE_USER=username
DATABASE_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# External Services
# ===========================================

# Email service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
GOOGLE_ANALYTICS_ID=your_ga_id_here

# ===========================================
# Security Configuration
# ===========================================

API_KEY_SECRET=your_production_api_key_secret_here
ENCRYPTION_KEY=your_32_byte_encryption_key_here

# SSL/TLS configuration
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# ===========================================
# Production Configuration
# ===========================================

DEBUG=false
VERBOSE_LOGGING=false

# Performance tuning
MAX_CONNECTIONS=100
KEEP_ALIVE_TIMEOUT=5000
REQUEST_TIMEOUT=30000

# Health check configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
